<MainWidget>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'Пульт управления ScalpEX'
        font_size: '24sp'
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        size_hint: 1, 1
        GridLayout:
            id: pairs_layout
            cols: 1
            spacing: 10
            size_hint_y: None
            # Высота GridLayout будет подстраиваться под количество виджетов
            height: self.minimum_height

    Label:
        id: status_label
        text: 'Статус: Ожидание данных с сервера...'
        size_hint_y: None
        height: self.texture_size[1]