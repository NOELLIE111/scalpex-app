# scalpex.kv

# Корневой виджет теперь ScreenManager, который управляет экранами
ScreenManager:
    id: screen_manager

    # Описываем первый экран
    Screen:
        name: 'main' # Даем экрану имя для переключения

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Label:
                id: info_label
                text: 'Это главный экран!'
                font_size: '20sp'

            Button:
                text: 'Изменить текст'
                on_press: app.handle_button_press()

            Button:
                text: 'Перейти в Настройки'
                on_press: root.current = 'settings' # Переключаем на экран с именем 'settings'

    # Описываем второй экран
    Screen:
        name: 'settings'

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10

            Label:
                text: 'Это экран настроек'
                font_size: '20sp'

            Button:
                text: 'Вернуться на главный'
                on_press: root.current = 'main' # Возвращаемся обратно на 'main'

